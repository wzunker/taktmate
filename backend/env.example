# Azure OpenAI Configuration
OPENAI_API_KEY=your_azure_openai_api_key_here
DEBUG_PROMPTS=false
PORT=3001

# Azure SQL Database Configuration (Required)
AZURE_SQL_SERVER=your-server-name.database.windows.net
AZURE_SQL_DATABASE=TaktMateDB
AZURE_SQL_USER=your_admin_username
AZURE_SQL_PASSWORD=your_secure_password

# Azure SQL Database Connection Pool (Optional)
AZURE_SQL_POOL_MAX=10
AZURE_SQL_POOL_MIN=0
AZURE_SQL_POOL_IDLE_TIMEOUT=30000
AZURE_SQL_POOL_ACQUIRE_TIMEOUT=60000
AZURE_SQL_POOL_CREATE_TIMEOUT=30000
AZURE_SQL_POOL_DESTROY_TIMEOUT=5000
AZURE_SQL_POOL_REAP_INTERVAL=1000
AZURE_SQL_POOL_CREATE_RETRY_INTERVAL=200

# Azure SQL Database Connection Settings (Optional)
AZURE_SQL_ENCRYPT=true
AZURE_SQL_ENABLE_ARITH_ABORT=true
AZURE_SQL_TRUST_SERVER_CERT=false
AZURE_SQL_CONNECT_TIMEOUT=30000
AZURE_SQL_REQUEST_TIMEOUT=30000
AZURE_SQL_CANCEL_TIMEOUT=5000
AZURE_SQL_PACKET_SIZE=4096
AZURE_SQL_USE_UTC=true
AZURE_SQL_CONNECTION_TIMEOUT=30000

# Test Database (Optional)
AZURE_SQL_TEST_DATABASE=TaktMateDB_test

# Authentication Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d
SESSION_SECRET=your_session_secret_here

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback

MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_CALLBACK_URL=http://localhost:3001/auth/microsoft/callback

# Email Service Configuration (for email verification)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Alternative SMTP Configuration
# EMAIL_SERVICE=smtp
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password

# Alternative SendGrid Configuration
# EMAIL_SERVICE=sendgrid
# SENDGRID_API_KEY=your_sendgrid_api_key

# Frontend/Backend URLs for email templates
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# Application Environment
NODE_ENV=development
