{
  "name": "taktmate-blob-storage-tests",
  "version": "1.0.0",
  "description": "Test suite for TaktMate Azure Blob Storage implementation",
  "private": true,
  "scripts": {
    "test": "jest --verbose",
    "test:unit": "jest unit/ --verbose",
    "test:integration": "jest integration/ --verbose", 
    "test:security": "jest --testNamePattern=\"security|auth|isolation\" --verbose",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage",
    "cleanup": "node scripts/cleanup-test-data.js"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@azure/storage-blob": "^12.17.0",
    "@azure/identity": "^4.0.1",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.js"
    ],
    "collectCoverageFrom": [
      "../../backend/services/storage.js",
      "../../backend/routes/files.js",
      "../../backend/middleware/auth.js"
    ],
    "coverageDirectory": "./coverage",
    "setupFilesAfterEnv": ["<rootDir>/fixtures/test-setup.js"],
    "testTimeout": 30000
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
