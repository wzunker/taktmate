{
  "navigationFallback": {
    "rewrite": "/index.html"
  },
  "forwardingGateway": {
    "allowedForwardedHosts": ["taktmate-backend-api-csheb3aeg8f5bcbv.eastus-01.azurewebsites.net"]
  },
  "routes": [
    {
      "route": "/.auth/*",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/*",
      "allowedRoles": ["authenticated"],
      "rewrite": "https://taktmate-backend-api-csheb3aeg8f5bcbv.eastus-01.azurewebsites.net/api/{*}"
    },
    {
      "route": "/login",
      "rewrite": "/.auth/login/entraExternalId"
    },
    {
      "route": "/logout",
      "redirect": "/.auth/logout"
    },
    {
      "route": "/*",
      "allowedRoles": ["authenticated"]
    }
  ],
  "responseOverrides": {
    "401": {
      "statusCode": 302,
      "redirect": "/login"
    }
  },
  "auth": {
    "identityProviders": {
      "customOpenIdConnectProviders": {
        "entraExternalId": {
          "registration": {
            "clientIdSettingName": "ENTRA_EXTERNAL_ID_CLIENT_ID",
            "clientCredential": {
              "clientSecretSettingName": "ENTRA_EXTERNAL_ID_CLIENT_SECRET"
            },
            "openIdConnectConfiguration": {
              "wellKnownOpenIdConfiguration": "https://taktmate.ciamlogin.com/taktmate.onmicrosoft.com/v2.0/.well-known/openid-configuration?appid=3f1869f7-716b-4885-ac8a-86e78515f3a4"
            }
          },
          "login": {
            "nameClaimType": "name"
          }
        }
      }
    }
  }
}
