{
  "$schema": "https://aka.ms/staticwebapp.config.schema.json",
  "auth": {
    "identityProviders": {
      "customOpenIdConnectProviders": {
        "entraExternalId": {
          "registration": {
            "clientIdSettingName": "ENTRA_EXTERNAL_ID_CLIENT_ID",
            "clientCredential": {
              "clientSecretSettingName": "ENTRA_EXTERNAL_ID_CLIENT_SECRET"
            },
            "openIdConnectConfiguration": {
              "wellKnownOpenIdConfiguration": "https://taktmate.ciamlogin.com/7d673488-6daf-4406-b9ce-d2d1f2b5c0db/TaktMateSignUpSignIn/v2.0/.well-known/openid-configuration"
            }
          },
          "login": {
            "nameClaimType": "name",
            "scopes": ["openid", "profile", "email"]
          }
        }
      }
    }
  },
  "routes": [
    {
      "route": "/login",
      "redirect": "/.auth/login/entraExternalId"
    },
    {
      "route": "/logout",
      "redirect": "/.auth/logout"
    },
    {
      "route": "/*",
      "allowedRoles": ["authenticated"]
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/static/*",
      "/manifest.json",
      "/robots.txt",
      "/sitemap.xml",
      "/favicon.ico",
      "/browserconfig.xml",
      "/*.png",
      "/*.jpg",
      "/*.jpeg",
      "/*.svg",
      "/*.gif",
      "/*.webp",
      "/*.ico"
    ]
  },
  "mimeTypes": {
    ".json": "application/json",
    ".js": "application/javascript",
    ".css": "text/css",
    ".html": "text/html",
    ".svg": "image/svg+xml",
    ".png": "image/png",
    ".jpg": "image/jpeg",
    ".jpeg": "image/jpeg",
    ".gif": "image/gif",
    ".webp": "image/webp",
    ".ico": "image/x-icon",
    ".woff": "font/woff",
    ".woff2": "font/woff2",
    ".ttf": "font/ttf",
    ".eot": "application/vnd.ms-fontobject",
    ".xml": "application/xml"
  },
  "globalHeaders": {
    "X-Content-Type-Options": "nosniff",
    "X-Frame-Options": "DENY",
    "X-XSS-Protection": "1; mode=block",
    "Referrer-Policy": "strict-origin-when-cross-origin",
    "Strict-Transport-Security": "max-age=31536000; includeSubDomains",
    "Content-Security-Policy": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://taktmate.ciamlogin.com https://accounts.google.com https://www.google-analytics.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://taktmate.ciamlogin.com https://accounts.google.com https://api.openai.com https://*.applicationinsights.azure.com https://taktmate-backend-api-csheb3aeg8f5bcbv.eastus-01.azurewebsites.net; frame-src https://taktmate.ciamlogin.com https://accounts.google.com;"
  },
  "responseOverrides": {
    "401": {
      "statusCode": 302,
      "redirect": "/.auth/login/entraExternalId?post_login_redirect_uri=.referrer"
    },
    "403": {
      "rewrite": "/index.html", 
      "statusCode": 200
    },
    "404": {
      "rewrite": "/index.html",
      "statusCode": 200
    }
  },
  "forwardingGateway": {
    "allowedForwardedHosts": [
      "taktmate.com",
      "www.taktmate.com",
      "app.taktmate.com"
    ]
  },
  "platform": {
    "apiRuntime": "node:18"
  },
  "environmentVariables": [
    "ENTRA_EXTERNAL_ID_CLIENT_ID",
    "ENTRA_EXTERNAL_ID_CLIENT_SECRET",
    "REACT_APP_API_URL",
    "REACT_APP_APP_NAME",
    "REACT_APP_ENVIRONMENT"
  ]
}
